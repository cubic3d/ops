machine:
  type: worker
  install:
    diskSelector:
      model: Samsung SSD 970 EVO Plus 500GB
  network:
    hostname: akane.h.{{ '{{ op://cluster/env/domain }}' }}
    interfaces:
      - interface: bond0
        bond:
          deviceSelectors:
            - hardwareAddr: "*:cb:2d"
              driver: e1000e
          mode: active-backup
        dhcp: true
        vlans:
          - vlanId: 10
            mtu: 1500
            dhcp: false
            dhcpOptions:
              routeMetric: 4096
  nodeLabels:
    node.longhorn.io/create-default-disk: "true"
