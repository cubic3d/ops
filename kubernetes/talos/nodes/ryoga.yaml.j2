machine:
  type: controlplane
  install:
    diskSelector:
      model: INTEL SSDSCKJW12
  network:
    hostname: ryoga.h.{{ '{{ op://cluster/env/domain }}' }}
    interfaces:
      - interface: bond0
        bond:
          deviceSelectors:
            - hardwareAddr: "*:85:db"
              driver: e1000e
          mode: active-backup
        dhcp: true
        vlans:
          - vlanId: 10
            mtu: 1500
            dhcp: false
            dhcpOptions:
              routeMetric: 4096
        vip:
          ip: 192.168.40.90
