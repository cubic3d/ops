# yaml-language-server: $schema=https://raw.githubusercontent.com/siderolabs/talos/refs/heads/release-1.11/website/content/v1.11/schemas/config.schema.json
version: v1alpha1
debug: false
persist: true
machine:
  token: op://cluster/talos/machine_token
  ca:
    crt: op://cluster/talos/machine_ca_crt
    {% if ENV.IS_CONTROLPLANE %}
    key: op://cluster/talos/machine_ca_key
    {% endif %}
  certSANs:
    - 127.0.0.1
    - k8s.{{ '{{ op://cluster/env/domain }}' }}
  kubelet:
    image: ghcr.io/siderolabs/kubelet:v1.34.1
    extraArgs:
      rotate-server-certificates: "true"
    extraMounts:
      - destination: /var/openebs/local
        type: bind
        source: /var/openebs/local
        options:
          - bind
          - rshared
          - rw
      - destination: /var/lib/longhorn
        type: bind
        source: /var/lib/longhorn
        options:
          - bind
          - rshared
          - rw
      - destination: /var/mnt/media
        type: bind
        source: /var/mnt/media
        options:
          - bind
          - rshared
          - rw
    extraConfig:
      maxPods: 150
    defaultRuntimeSeccompProfileEnabled: true
    disableManifestsDirectory: true
  network:
    disableSearchDomain: true
  install:
    image: factory.talos.dev/metal-installer/f4817031cd07378f3146b224cdbd210cce736b7d932083a82e913d397f4ac381:v1.11.0
    wipe: false
  files:
    - op: create
      path: /etc/cri/conf.d/20-customization.part
      content: |-
        [plugins]
          [plugins."io.containerd.grpc.v1.cri"]
            enable_unprivileged_ports = true
            enable_unprivileged_icmp = true
        [plugins."io.containerd.cri.v1.images"]
          discard_unpacked_layers = false
        [plugins."io.containerd.cri.v1.runtime"]
          device_ownership_from_security_context = true
    - op: overwrite
      path: /etc/nfsmount.conf
      permissions: 0o644
      content: |
        [ NFSMount_Global_Options ]
        nfsvers=4.2
        hard=True
        noatime=True
        nconnect=16
  sysctls:
    fs.inotify.max_queued_events: "65536"
    fs.inotify.max_user_instances: "8192"
    fs.inotify.max_user_watches: "1048576"
    net.core.rmem_max: "67108864"
    net.core.wmem_max: "67108864"
    net.ipv4.neigh.default.gc_thresh1: "4096"
    net.ipv4.neigh.default.gc_thresh2: "8192"
    net.ipv4.neigh.default.gc_thresh3: "16384"
    net.ipv4.tcp_fastopen: "3"
    user.max_user_namespaces: "11255"
    vm.nr_hugepages: "1024"
  features:
    rbac: true
    stableHostname: true
    {% if ENV.IS_CONTROLPLANE %}
    kubernetesTalosAPIAccess:
      enabled: true
      allowedRoles:
        - os:admin
      allowedKubernetesNamespaces:
        - system-upgrade
    {% endif %}
    apidCheckExtKeyUsage: true
    diskQuotaSupport: true
    kubePrism:
      enabled: true
      port: 7445
    hostDNS:
      enabled: true
      forwardKubeDNSToHost: false
      resolveMemberNames: true
  kernel:
    modules:
      - name: zfs
  nodeLabels:
    topology.kubernetes.io/region: home
cluster:
  id: op://cluster/talos/cluster_id
  secret: op://cluster/talos/cluster_secret
  controlPlane:
    endpoint: https://192.168.40.90:6443
  clusterName: main
  network:
    cni:
      name: none
    dnsDomain: cluster.local
    podSubnets:
      - 10.244.0.0/16
    serviceSubnets:
      - 10.96.0.0/12
  token: op://cluster/talos/cluster_token
  ca:
    crt: op://cluster/talos/cluster_ca_crt
    {% if ENV.IS_CONTROLPLANE %}
    key: op://cluster/talos/cluster_ca_key
    {% endif %}
  discovery:
    enabled: true
    registries:
      kubernetes:
        disabled: true
      service:
        disabled: false
  {% if ENV.IS_CONTROLPLANE %}
  secretboxEncryptionSecret: op://cluster/talos/cluster_secretboxencryptionsecret
  aggregatorCA:
    crt: op://cluster/talos/cluster_aggregatorca_crt
    key: op://cluster/talos/cluster_aggregatorca_key
  serviceAccount:
    key: op://cluster/talos/cluster_serviceaccount_key
  apiServer:
    image: registry.k8s.io/kube-apiserver:v1.34.1
    extraArgs:
      feature-gates: MutatingAdmissionPolicy=true
      runtime-config: admissionregistration.k8s.io/v1beta1=true
    certSANs:
      - 127.0.0.1
      - 192.168.40.90
      - k8s.{{ '{{ op://cluster/env/domain }}' }}
    disablePodSecurityPolicy: true
    auditPolicy:
      apiVersion: audit.k8s.io/v1
      kind: Policy
      rules:
        - level: Metadata
  controllerManager:
    image: registry.k8s.io/kube-controller-manager:v1.34.1
  proxy:
    disabled: true
    image: registry.k8s.io/kube-proxy:v1.34.1
  scheduler:
    image: registry.k8s.io/kube-scheduler:v1.34.1
  etcd:
    ca:
      crt: op://cluster/talos/cluster_etcd_ca_crt
      key: op://cluster/talos/cluster_etcd_ca_key
  coreDNS:
    disabled: true
  allowSchedulingOnControlPlanes: true
  {% endif %}
