{
  extends: [
    "config:base",
    ":disableRateLimiting",
    ":timezone(Europe/Berlin)",
    ":separatePatchReleases",
    ":semanticCommits",
    "docker:enableMajor",
    ":enablePreCommit",
  ],
  dependencyDashboardTitle: "ðŸ¤– Renovate Dashboard ðŸ¤–",
  suppressNotifications: ["prIgnoreNotification"],
  "helm-values": {
    fileMatch: ["k8s/.+\\.yaml$"],
  },
  kubernetes: {
    fileMatch: ["k8s/.+\\.yaml$"],
    ignorePaths: ["**/gotk-components.yaml"],
  },
  flux: {
    fileMatch: ["k8s/.+\\.yaml$"],
  },
  packageRules: [
    {
      datasources: ["docker"],
      labels: ["renovate/container"],
    },
    {
      datasources: ["helm"],
      labels: ["renovate/helm"],
    },
    {
      updateTypes: ["major"],
      labels: ["version/major"],
    },
    {
      updateTypes: ["minor"],
      labels: ["version/minor"],
    },
    {
      updateTypes: ["patch"],
      labels: ["version/patch"],
    },
  ],
}
